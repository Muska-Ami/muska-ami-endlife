<div id="home-head">
    <div id="home-background" style="background-image: url(<%- theme.home_background %>)"></div>
    <% if (theme.head_block_enable) { %>
    <div id="home-info" class="home-info" @click="home_click">
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="info">
            <div class="wrap">
                <h1><%= config.title %></h1>
                <h3><%= config.subtitle %></h3>
                <% if (theme.jinrishici) { %>
                <script src="https://sdk.jinrishici.com/v2/browser/jinrishici.js" charset="utf-8"></script>
                <h5 id="jinrishici-sentence">#Today Poem</h5>
                <% } %>
            </div>
        </span>
    </div>
    <% } %>
</div>
<% wrapClass = theme.card.enable ? "" : "home-posts-wrap-no-card"; %>
<div id="home-posts-wrap" class="<%- wrapClass %>">
    <div id="home-posts">
        <div id="posts">
            <%- include("posts") %>
            <%- include("current") %>
        </div>
    </div>
    <% if (theme.card.enable) { %>
    <div id="home-card">
        <%- include("card") %>
    </div>
    <% } %>
</div>